[include]
  path = ~/.config/git/alias
  path = ~/.config/git/user
[includeIf "hasconfig:remote.*.url:*github.com*/**"]
  path = ~/.config/git/github/config
[includeIf "hasconfig:remote.*.url:*bitbucket.org*/**"]
  path = ~/.config/git/bitbucket/config
